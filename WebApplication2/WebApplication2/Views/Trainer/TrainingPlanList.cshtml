@model IEnumerable<WebApplication2.Models.TrainingPlan>

<h2>Training Plans</h2>

<p>
    @Html.ActionLink("Create New", "CreatePlan")      
    @Html.ActionLink("Training type manager", "TrainingTypeList")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PlanId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrainingType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Level)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Coach)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlanId)
            </td>
            <td title="@item.TrainingType.Description">
                @Html.DisplayFor(modelItem => item.TrainingType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coach)
            </td>
            <td>
                @Html.ActionLink("View", "DetilesPlan", "Shared", new { id = item.PlanId }, "DFQ") | 
                @if (Session["UserID"].ToString().Equals(item.Coach+""))
                {
                   @Html.ActionLink("Edit", "EditPlan", new { planId = item.PlanId}, "DFQ")                     
                }
            </td>
        </tr>
    }

</table>